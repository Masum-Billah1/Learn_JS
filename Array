<body>
    <script>
        //Individual Initialization
        var arr = new Array(3);
        arr[0] = 5;
        arr[1] = 10;
        arr[2] = 15;

        for(i=0;i<3;i++){
            document.write(arr[i]+"<br>");
        }

        //Initialized at a time
        var arr = new Array(15,10,5);
        for(i=0;i<3;i++){
            document.write(arr[i]+"<br>");
        }
    </script>
</body>
